{
  "name": "blotify-backend",
  "description": "The backend service for Blotify.",
  "version": "0.1.0",
  "repository": "https://github.com/jeffelini/blotify",
  "author": "Jeffrey Liu",
  "license": "MIT",
  "main": "src/server.js",
  "bin": "main.js",
  "scripts": {
    "start": "NODE_ENV=production node main.js",
    "dev": "NODE_ENV=development nodemon main.js",
    "lint": "prettier -w main.js src/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "yarn lint",
      "git add"
    ]
  },
  "dependencies": {
    "get-port": "^4.0.0",
    "koa": "^2.5.3",
    "spotify-web-api-node": "thelinmichael/spotify-web-api-node"
  },
  "devDependencies": {
    "husky": "^1.1.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  }
}
